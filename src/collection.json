{
  "$schema": "../node_modules/@angular-devkit/schematics/collection-schema.json",
  "schematics": {
    "prettify-and-lint": {
      "description": "Add TSLint and Prettier. Creates/replaces TSLint and Prettier settings with recommended configuration",
      "factory": "./prettify-and-lint",
      "schema": "./prettify-and-lint/schema.json"
    },
    "add-dependency": {
      "description": "Add a dependency to the package.json",
      "factory": "./add-dependency",
      "schema": "./add-dependency/schema.json"
    },
    "add-service": {
      "description": "Add a service to the project",
      "factory": "./add-service",
      "schema": "./add-service/schema.json"
    },
    "update-app-component": {
      "description": "Update App Component HTML with custom content",
      "factory": "./update-app-component",
      "schema": "./update-app-component/schema.json"
    },
    "add-assets": {
      "description": "Add project .scss files in the assets folder",
      "factory": "./add-assets",
      "schema": "./add-assets/schema.json"
    },
    "ngrx": {
      "description": "ngRX",
      "factory": "./ngrx",
      "schema": "./ngrx/schema.json"
    },
    "ngrx-actions": {
      "description": "ngRX",
      "factory": "./ngrx-actions",
      "schema": "./ngrx-actions/schema.json"
    },
    "ngrx-effects": {
      "description": "ngRX",
      "factory": "./ngrx-effects",
      "schema": "./ngrx-effects/schema.json"
    },
    "ngrx-reducer": {
      "description": "ngRX",
      "factory": "./ngrx-reducer",
      "schema": "./ngrx-reducer/schema.json"
    },
    "ngrx-store": {
      "description": "ngRX",
      "factory": "./ngrx-store",
      "schema": "./ngrx-store/schema.json"
    },
    "bafa-initializer": {
      "description": "Initializer Schematic which updated the app.component.html, add bafa-ui-lib as dependency, add tsLint and Prettier, adds .scss files and adds auth service",
      "factory": "./bafa-initializer",
      "schema": "./bafa-initializer/schema.json"
    }
  }
}